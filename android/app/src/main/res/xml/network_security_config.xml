<?xml version="1.0" encoding="utf-8"?>
<!--
    Network Security Configuration for Secure Insta Message.
    
    Policy: NO cleartext traffic. Ever.
    All networking goes through the Python core → Tor.
    This config is defense-in-depth — even if Flutter code
    tried to make a clearnet request, Android would block it.
-->
<network-security-config>
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- 
        Allow localhost only for IPC with the Python core.
        This is NOT a clearnet exception — it's local subprocess
        communication only.
    -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">127.0.0.1</domain>
        <domain includeSubdomains="false">localhost</domain>
    </domain-config>
</network-security-config>
